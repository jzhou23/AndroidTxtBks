<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:apps="http://schemas.android.com/tools"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:elevation="2dp"
        android:background="@drawable/search_background"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/list_item_main_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="32sp"
            android:textStyle="bold"
            apps:text="$189"/>

        <TextView
            android:id="@+id/list_item_penny_price"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_item_main_price"
            android:layout_toEndOf="@+id/list_item_main_price"
            android:textSize="16sp"
            android:textStyle="bold"
            apps:text="97"/>

        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            apps:text="Chemistry: A Molecular Approach"
            android:layout_below="@+id/list_item_main_price"
            android:textSize="20sp"/>

        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/list_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            apps:text="Nivaldo J.Tro"
            android:layout_below="@+id/list_item_title"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/list_item_bookcover"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:elevation="2dp"
        apps:background="@android:color/darker_gray" />

</LinearLayout>